<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationDrawer.Settings.SettingsInformationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="220dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_as"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="260dp"
        android:text="@string/settings_information_description"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="360dp"
        android:layout_marginTop="10dp"
        android:text="@string/settings_information_description2"/>

    <TextView
        android:id="@+id/textView40"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/settings_information_description3"
        android:textColor="#037C71"
        android:textSize="18sp" 
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginStart="205dp"/>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>