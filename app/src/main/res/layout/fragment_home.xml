<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_home"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewHome"
        android:layout_marginTop="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="#1946CF"
                app:layout_constraintBottom_toTopOf="@+id/table_homewater"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/icon_water" />

            <TableLayout
                android:id="@+id/table_homeground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A5A5A5">

                    <TextView
                        android:id="@+id/textcolumna1_2"
                        android:layout_height="match_parent"
                        android:layout_margin="8px"
                        android:text="@string/home_columna1"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/textcolumna2_2"
                        android:layout_width="316dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8px"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:text="@string/home_columnaTierra"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:text="@string/home_actual"
                        android:textAlignment="center"
                        android:textIsSelectable="false" />

                    <TextView
                        android:id="@+id/text_home_info_grou1"
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="#3C3F41"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/texttext_home_info_grou2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="386dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="11:30"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_home_info_grou3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:text="11:00"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_home_info_grou4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center" />
                </TableRow>
            </TableLayout>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/table_homeground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/table_homewater"
                app:srcCompat="@drawable/icon_ground" />

            <TableLayout
                android:id="@+id/table_homewater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A5A5A5">

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_height="match_parent"
                        android:layout_margin="8px"
                        android:text="@string/home_columna1"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/textView_titleTableConnections"
                        android:layout_width="316dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8px"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:text="@string/home_columnaAgua"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:text="@string/home_actual"
                        android:textAlignment="center"
                        android:textIsSelectable="false" />

                    <TextView
                        android:id="@+id/text_home_info_water1"
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="#3C3F41"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_home_info_water2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="386dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="11:30"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_home_info_water3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:text="11:00"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/text_home_info_water4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>