<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewConnections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_connections"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textViewConnections"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center">

    <TableLayout
        android:id="@+id/table_connections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A5A5A5">

            <TextView
                android:id="@+id/textView_titleTableConnections"
                android:layout_width="316dp"
                android:layout_height="match_parent"
                android:layout_margin="15px"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="@string/text_titleTableConnections"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/text_connectionTable"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:text="@string/text_connectionTable"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/text_infoConnection"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buena"
                android:textAlignment="center"
                android:textColor="#3C3F41"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/text_spaceTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_spaceTable" />

            <TextView
                android:id="@+id/text_infoSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12/512 Gb"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/text_warningTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="@string/text_warningTable" />

            <TextView
                android:id="@+id/text_infowarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-Fallode sincronizacion con sensor 2  -Aspersor 3 no funciona"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/text_logTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="@string/text_logTable" />

            <TextView
                android:id="@+id/text_infoLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="02/09/20- 14:15 Se agrego dispositivo"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="377dp"
        android:layout_height="162dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_connections"
        app:layout_constraintVertical_bias="0.24">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:contentDescription="@string/tab_water"
                app:srcCompat="@drawable/icon_water" />

            <TextView
                android:id="@+id/text_waterStatus"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="8sp"
                android:background="#A6E609"
                android:text="Sensores Activos" />

            <Button
                android:id="@+id/button_waterRactiv"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/buttonReconnect"
                android:textSize="10sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:contentDescription="@string/tab_ground"
                app:srcCompat="@drawable/icon_ground" />

            <TextView
                android:id="@+id/text_groundStatus"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="8sp"
                android:background="#A6E609"
                android:text="Sensores Activos" />

            <Button
                android:id="@+id/button_groundRactiv"
                android:layout_width="131dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/buttonReconnect"
                android:textSize="10sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:contentDescription="@string/tab_wind"
                app:srcCompat="@drawable/icon_wind" />

            <TextView
                android:id="@+id/text_windStatus"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="8sp"
                android:background="#A6E609"
                android:text="Sensores Activos" />

            <Button
                android:id="@+id/button_windRactiv"
                android:layout_width="131dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="@string/buttonReconnect"
                android:textSize="10sp"
                android:layout_marginBottom="20dp"/>
        </TableRow>

    </TableLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>